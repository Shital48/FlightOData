
<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    controllerName="com.flight.flightodata.controller.Detail">
    <Page title="Flight Details">
         
           
            <!-- Flight Details -->
            <Text text="{carrid}" />
            <Text text="{connid}" />
            <Text text="{fldate}" />

             <!-- Expanded FlightCarrier --> 
            <List items="{FlightCarrier/carrierFlights}">
                 <items>
                <ObjectListItem
                    title="{PLANETYPE}"/>
            </items>
            </List>


            <!-- Expanded flightBookings -->
            <List items="{flightBookings}">
                 <items>
                <ObjectListItem
                    title="{CUSTOMID}"
                    number="{COUNTER}"  />
            </items>
            </List>
             
    </Page>  
</mvc:View>
